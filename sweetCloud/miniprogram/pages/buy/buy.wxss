/* 搜索框 ------------------------------------------------------------ */
.search {
  /* background: #282828; */
  position: fixed;
  top: 0;
  z-index: 1;
  display: flex;
}
.bg_box {
  background:  #282828;
  position: absolute;
  top: 0;
  z-index: -1;
  height: 100rpx;
  width: 750rpx;
}
.app_logo{
  text-align: center;
  width: 125rpx;
}
.app_news {
  text-align: center;
  width: 125rpx;
}
.app_logo image {
  width: 44rpx;
  height: 100rpx;
}
.app_search {
  position: relative;
  width: 500rpx;
  display: flex;
}
.app_search image {
  width: 32rpx;
  height: 32rpx;
  position: absolute;
  top: 14rpx;
  left: 30rpx;

