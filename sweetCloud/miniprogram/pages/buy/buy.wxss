  position: absolute;
  background: white;
  top: 20rpx;
  border-radius: 60rpx;
  height: 60rpx;
  width: 500rpx;
  opacity: .5;
}
.app_news image {
  width: 40rpx;
  height: 100rpx;
}
/*  */
.home_hidden{
  width: 100%;
  height: 100rpx;
  background-color: #141414;
}
/* 人气摄影师 ------------------------------------------------------ */
.pgraph {
  margin-top: 10rpx;
  background: #282828;
}
.pgraph_top {
  height: 90rpx;
  background: #282828;
  line-height: 82rpx;
}
.pgraph_img {
  margin-left: 20rpx;
  height: 33rpx;
  width: 82rpx;
  vertical-align: middle;
}

.pgraph_left {
  color: white;
  font-size: 33rpx;
  vertical-align: middle;
  font-weight: 100;
}
.pgraph_right {
  color: #737373;
  font-size: 24rpx;
  padding-top: 4rpx;
  float: right;
}
.pgraph_right_img {
  margin-top: 35rpx;
  margin-right: 20rpx;
  height: 20rpx;
  width: 32rpx;
  float: right;
}
.pgraph_bot {
  height: 285rpx;
  overflow: scroll;
}
.pgraph_senti {
  display: flex;
  text-align: center;
  color: #808080;
  font-size: 20rpx;
  margin: 30rpx 12.5rpx;
}
.pgraph_person {
  width: 180rpx;
  margin: 0 12.5rpx;
}
.pgraph_person_img {
  width: 180rpx;
  height: 180rpx;
  border-radius: 50%;
  overflow: hidden;
  object-fit: cover;
  border: 4rpx solid #D8D8D8;
  margin-bottom: 20rpx;
}

/* 本周推荐作品 ------------------------------------------------------ */
.pgraph_comment {
  padding: 30rpx;
  color:#7F7F7F;
}
.pgraph_comment_line {
  height: 4rpx;
  border-radius: 4rpx;
  background: #141414;
  margin-top: 30rpx;
}
.pgraph_comment_title {
  font-size: 33rpx;
  margin-top: 15rpx;
  line-height: 45rpx;
}

.pgraph_comment_price {
  font-size: 24rpx;
  margin: 13rpx 0;
}
.pgraph_comment_price_right {
  float: right;
}
.pgraph_comment_bbox {
  border-top: 1rpx solid #FAFAFA;
  width: 690rpx;
  height: 690rpx;
  border-radius: 6rpx;
  background: #FAFAFA;
}
.pgraph_comment_sbox {
  text-align: center;
  margin: 19rpx;
  width: 650rpx;
  height: 650rpx;
  border-radius: 6rpx;
  background: #FAF6F4;
  border: 1rpx solid #D8D8D9;
}
.pgraph_comment_img {
  width: 610rpx;
  height: 610rpx;
  margin: 20rpx;
  line-height: 610rpx;
  text-align: center;
  position: relative
}
.pgraph_comment_img image {
  width: 610rpx;
  height: 610rpx;
}

.goodsList {
  margin: 10rpx 0;
}

.bottom_title {
  text-align: center;
  color: #808080;
  font-size: 33rpx;
  margin-top: 10rpx;
  margin-bottom: 30rpx;
}
/* 授权弹窗 */
.userAlert{
   width: 100%;
    height: 100%;
    position: fixed;
    top: 0;
    left: 0;
    background: rgba(0,0,0,.4);
    z-index: 100;
}
.userAlertBox{
    width: 540rpx;
    height: 170rpx;
    position: absolute;
    top:calc(50% - 134rpx);
    left: calc(50% - 270rpx);
    z-index: 110;
    background-color: #fff;
    border-radius: 20rpx;
    border: 2rpx rgb(255, 255, 255) solid;
    color: #000;
    text-align: center;
    padding: 36rpx 20rpx;
}
.userAlertBox text{
  font-size: 32rpx;
}
.userAlert_button{
  display: flex;
  width: 100%;
  justify-content: space-between;
  margin-top: 47rpx;
}

